{
  "name": "Analogue",
  "short_name": "Analogue",
  "version": "0.1",
  "description": "Track and organize the content you love.",
  "manifest_version": 2,
  "minimum_chrome_version": "79",
  "homepage_url": "https://www.analogue.app",
  "permissions": [],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/all.css"],
      "js": ["js/all.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.analogue.app/*"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/extension-icon-x16.png",
      "32": "icons/extension-icon-x32.png",
      "48": "icons/extension-icon-x48.png",
      "128": "icons/extension-icon-x128.png"
    },
    "default_title": "Add to Analogue"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/extension-icon-x16.png",
    "32": "icons/extension-icon-x32.png",
    "48": "icons/extension-icon-x48.png",
    "128": "icons/extension-icon-x128.png"
  }
}
